{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}La tâche{% endblock %}

{% block body %}
<div class="col-md-12 login-sec">

    <h2 class="text-center">La tâche</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ task.date ? task.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('task_index') }}" class="back">Retour à la liste</a>

    <a href="{{ path('task_edit', {'id': task.id}) }}"><i class="fa fa-pencil fa-2x"></i></a>

    {{ include('task/_delete_form.html.twig') }}

</div>
{% endblock %}
