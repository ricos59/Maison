{% extends 'base.html.twig' %}

{% block title %}Ma tâche{% endblock %}

{% block body %}
    <h1>Ma tâche</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ task.date ? task.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('task_index') }}">Retour à la liste</a>

    <a href="{{ path('task_edit', {'id': task.id}) }}">Modifier la tâche</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
