{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ task.date ? task.date|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ task.comments }}</td>
            </tr>
            <tr>
                <th>Frequency_choice</th>
                <td>{{ task.frequencyChoice }}</td>
            </tr>
            <tr>
                <th>Frequency</th>
                <td>{{ task.frequency }}</td>
            </tr>
            <tr>
              <th>Utilisateurs</th>
              <td>
                {% for user in task.users %}
                {{ user.username }}
                {% endfor %}
              </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('task_index') }}">back to list</a>

    <a href="{{ path('task_edit', {'id': task.id}) }}">edit</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
