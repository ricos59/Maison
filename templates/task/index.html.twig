{% extends 'base.html.twig' %}

{% block title %}Les tâches{% endblock %}


{% block body %}

    <h1>Les tâches</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.title }}</td>
                    <td>{{ task.date ? task.date|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('task_show', {'id': task.id}) }}">show</a>
                        <a href="{{ path('task_edit', {'id': task.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune tâche</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('task_new') }}">Créer une nouvelle tâche</a>

{% endblock %}
